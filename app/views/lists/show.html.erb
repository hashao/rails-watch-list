<header>

        <div class="py-4 px-2 lg:mx-4 xl:mx-12 ">
            <div class="">
                    <div id="main-nav" class="w-50% flex-grow lg:flex items-center lg:w-auto hidden  ">
                        <nav class="flex items-center justify-between flex-wrap w-1/3">
                          <%= link_to 'Home', lists_path %>
                          <%= link_to 'New bookmark', new_list_bookmark_path(@list) %>
                          <%= link_to 'Edit', edit_list_path(@list) %>
                          <%= link_to 'Delete', @list, method: :delete, data: { confirm: 'Are you sure?' }  %>
                        </nav>
                    </div>
            </div>
        </div>

</header>


<main class="py-4">
  <div class="px-4">
    <div class="grid grid-cols-3 gap-4 md:-mx-2">


    <% @list.bookmarks.each do |bookmark| %>

      <div class="w-full lg:w-1/3 md:mx-2 mb-4 md:mb-0">
          <div class="flex flex-col justify-between w-72 sm:w-96 h-96 bg-white bg-center text-gray-800 shadow-md overflow-hidden cursor-pointer bg-cover rounded-xl" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(<%= bookmark.movie.poster_url %>)">
            <div class="flex justify-between items-center ml-4 pr-8">
              <div class="bg-red-600 text-white bg-opacity-95 shadow px-2 py-1 flex items-center font-bold text-xs rounded"><%= bookmark.comment %></div>
              <div class="bg-red-600 w-10 h-12 shadow flex flex-col-reverse p-2 text-center font-bold text-white rounded-b-full"><%= bookmark.movie.rating %></div>
            </div>
            <div class="bg-white bg-opacity-95 shadow-md rounded-r-xl p-4 flex flex-col mr-4 mb-8">
              <h3 class="text-xl font-bold pb-2"><%= bookmark.movie.title %></h3>
              <p class="truncate text-gray-500 text-sm"><%= bookmark.movie.overview %></p>
              <div class="flex justify-between items-center">
                <span class="text-gray-400 text-xs">more</span>
              </div>
            </div>
          </div>
      </div>

    <% end %>

</main>


</main>
